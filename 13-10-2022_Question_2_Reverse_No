import java.util.*;
class reverse1{
	Scanner sc=new Scanner(System.in);
	int num,rev=0,rem;
    void reVerse() {
    System.out.println("Enter the Number : ");	
	num=sc.nextInt();
	while(num>0) { //for check condition number is not equal to 0
                /*formula*/
		rem=num%10;
		rev=rev*10+rem;
		num=num/10;
	}
	System.out.println("The Reverse Number is :"+rev);
    }
}
class sum extends reverse1 //Derives reverse class
{	
	int a;
	int b;
	void sumOfDigit() {
	reVerse(); 
	System.out.println("Enter the value of a : ");
	a=sc.nextInt();
	System.out.println("Enter the value of b :");
        b=sc.nextInt();
        System.out.println("The sum of a and b is "+(a+b));
	}
}
public class Both extends sum{
public static void main(String[] args) {
	Both c=new Both(); //creating class object
	c.sumOfDigit(); // call method
}
}
